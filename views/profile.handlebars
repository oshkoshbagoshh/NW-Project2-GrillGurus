<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Create a New Recipe: </h3>
    <form class='form new-recipe-form'>
      <div class='form-group'>
        <label for='recipe_name'>Recipe Name:</label>
        <input
          class='form-input'
          type='text'
          id='recipe_name'
          name='recipe_name'
        />
      </div>
      <div class='form-group'>
        <label for='recipe_ingredients'>Recipe Ingredients:</label>
        {{! <input
          class='form-input'
          type='text'
          id='recipe_ingredients'
          name='recipe_ingredients'
        /> }}
        <textarea
          class='form-input'
          type='text'
          id='recipe_ingredients'
          name='recipe_ingredients'
        ></textarea>

      </div>
      <div class='form-group'>
        <label for='recipe_instructions'>Instructions:</label>
        <textarea class='form-input' type='text' id='recipe_instructions' name='recipe_instructions'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-success'>Create</button>
      </div>
    </form>
  </div>

  {{!-- {{#if recipes.length}} --}}
    <div class='col-md-6 recipe-list'>
      <h3>Current Recipes:</h3>
      {{!-- this should display a list of the users's current recipes --}}

      {{#each recipes as |recipe|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/recipe/{{recipe.id}}'>{{recipe.recipe_name}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button class='btn btn-sm btn-danger' data-id='{{recipe.id}}'>DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{!-- {{/if}} --}}
</div>

<script src='/js/profile.js'></script>